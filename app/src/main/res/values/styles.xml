<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="button_style_orange">
        <item name="android:background">@drawable/button_orange_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">@dimen/margin_padding_size_small</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="startIconTint">@color/orange</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="edit_text_style">
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/color_secondary_text</item>
    </style>

</resources>